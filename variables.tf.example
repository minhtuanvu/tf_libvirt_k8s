    default  = "etcd"
}

variable "etcd_node_count" {
    description = "The number of etcd nodes."
    default  = "3"
}

variable "etcd_node_cpu" {
    description = "Worker node cpu's."
    default  = "4"
}

variable "etcd_node_memory" {
    description = "Worker node memory."
    default  = "4096"
}

variable "etcd_node_disk" {
    description = "Worker node disk size."
