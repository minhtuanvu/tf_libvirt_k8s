variable "domain_name" {
    description = "K8S hosts domain name"
    default  = "k8s.local"
}

variable "master_ips" {
    description = "IP"
    default  = ["192.168.123.10","192.168.123.11","192.168.123.12"]
}

variable "k8s_network" {
    description = "Subnet cidr for k8s hots"
    default  = "192.168.123.0/24"
}

variable "storage_pool" {
    description = "Storage pool path"
    default  = "/libvirt_pool"
}

variable "storage_pool_name" {
    description = "Storage pool name"
    default  = "k8s_pool"
}

variable "qcow_image_filename" {
    description = "QCOW2 image filename."
    default  = "ubuntu-bionic.qcow2"
}

variable "qcow_image_path" {
    description = "QCOW2 image path."
    default  = "/home/user/data"
}

variable "master_node_prefix" {
    description = "Master node prefix."
    default  = "master"
}

variable "master_node_count" {
    description = "The number of master nodes."
    default  = "3"
}

variable "master_node_cpu" {
    description = "Worker node cpu's."
    default  = "4"
}

variable "master_node_memory" {
    description = "Worker node memory."
    default  = "4096"
}

variable "master_node_disk" {
    description = "Worker node disk size."
    default  = "21474836480"
}

variable "worker_node_prefix" {
    description = "Worker node prefix."
    default  = "worker"
}

variable "worker_node_count" {
    description = "The number of worker nodes."
    default  = "3"
}

variable "worker_node_cpu" {
    description = "Worker node cpu's."
    default  = "4"
}

variable "worker_node_memory" {
    description = "Worker node memory."
    default  = "4096"
}

variable "worker_node_disk" {
    description = "Worker node disk size."
    default  = "21474836480"
}

variable "etcd_node_prefix" {
